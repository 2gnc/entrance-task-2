include helpers/_mixins

<!DOCTYPE html>
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
		title Яндекс Переговорки: Новая встреча
		link(rel="stylesheet", href="styles/style.min.css")
		script(defer src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
		script(defer src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.7.0/jquery.nicescroll.min.js")
		script(defer src="scripts/scripts.js")
	body.app
		header.header
			.wrapper.header__layout
				+logo('#', '../img/logo.svg')
		form.event( method="GET" action="#" )
			.event__wrapper
				.event__heading
					.caption Новая встреча
					.icon.icon--close
				.event__body
					.event__col
						.event__row
							label(for="eventTheme").label Тема
							input(type="text" id="eventTheme" placeholder="О чем будете говорить?").inpt.event__text-inpt
						.event__row
							label(for="eventUsersInpt").label Участники
							input(type="text" id="eventUsersInpt" placeholder="Например, Тор Одинович" autofocus).inpt.event__text-inpt
						.event__participants
							.autocomplete
								.autocomplete__wrapper
									.user.user--listed
										img(src="https://pbs.twimg.com/profile_images/660254077947744256/tTt22r3f.png").user__pic
										.user__name Лекс Лютер
										.user__desc &middot; 7 этаж
									.user.user--listed
										img(src="https://i.mycdn.me/image?id=858985521355&ts=00000000ca0000031b&plc=WEB&tkn=*mSbbxyd2u6Q3hZMyXBNdpg-nDqo&fn=sqr_64").user__pic
										.user__name Томас Андерсон
										.user__desc &middot; 2 этаж
									.user.user--listed
										img(src="https://yt3.ggpht.com/-2f7jk6z4gIM/AAAAAAAAAAI/AAAAAAAAAAA/38an6LUMtnc/s48-c-k-no-mo-rj-c0xffffff/photo.jpg").user__pic
										.user__name Дарт Вейдер
										.user__desc &middot; 1 этаж
									.user.user--listed
										img(src="https://ae01.alicdn.com/kf/HTB1EEULKVXXXXcJXFXXq6xXFXXXQ/1-6.jpg_50x50.jpg").user__pic
										.user__name Кларк Кент
										.user__desc &middot; 2 этаж
									.user.user--listed
										img(src="https://pp.userapi.com/c410225/v410225130/5c17/wchjCgR9jug.jpg").user__pic
										.user__name Стивен Хоккинг
										.user__desc &middot; 1 этаж
									.user.user--listed
										img(src="https://pp.userapi.com/c639628/v639628963/50502/7iDvSWMIaZ0.jpg").user__pic
										.user__name Илон Маск
										.user__desc &middot; 1 этаж
									.user.user--listed
										img(src="https://vignette.wikia.nocookie.net/marvelcinematicuniverse/images/a/a2/Yondu_Profile%281%29.png").user__pic
										.user__name Йонду Удонта
										.user__desc &middot; 2 этаж
					.event__col
						.event__row
							.date-time-inpt
								.date-time-inpt__date
									label(for="eventDate").label Дата
									input(type="text" value="14 декабря, 2017" id="eventDate").inpt.date-time-inpt__date-inpt
								.date-time-inpt__time
									.label Начало
									input(type="text" value="16:00").inpt.date-time-inpt__time-inpt
									.date-time-inpt__separator &ndash;
								.date-time-inpt__time
									.label Конец
									input(type="text" value="16:30").inpt.date-time-inpt__time-inpt
						.event__recomendations
							.event__row
								.label Ваша переговорка
								.recomendation.recomendation--selected
									span.recomendation__time 16:00 &ndash; 16:30
									span.recomendation__room Готем &middot; 4 этаж

			.event__footer
				.event__buttons
					button.btn.btn--grey Отмена
					button.btn Создать встречу